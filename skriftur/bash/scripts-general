#!/bin/bash

es() {
	if [ $# -ne 1 ]; then
		vim ~/Linux-settings/skriftur/bash/scripts-general;
	fi
	while getopts "g" opt; do
		case $opt in
			g)
				vim ~/Linux-settings/skriftur/scripts-git
				;;
			\?)
				echo "Invalid option: -$OPTARG" >&2
				;;
		esac
	done
}

..() {
	cd ..
}

/() {
	cd /
}

-() {
	cd -
}

zippo() {
	unzip \*.zip
	sleep 1
	rm *.zip
}

brains() {
	~/Forritun/Brains/brains < $1
}
